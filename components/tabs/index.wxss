.weui-tabs {
    width: 100%
}

.weui-tabs-bar__wrp {
    width: 100%;
    height: 70rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #fff;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
    border-bottom: 1px solid #eee;
}

.weui-tabs-bar__content {
    width: 100%;
    white-space: nowrap
}

.weui-tabs-bar__item {
    display: inline-block
}

.weui-tabs-bar__title {
    display: inline-block;
    padding: 10rpx 0;
    border-bottom-width: 2px;
    border-bottom-style: solid;
    border-bottom-color: transparent
}